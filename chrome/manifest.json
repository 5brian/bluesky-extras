{
  "manifest_version": 3,
  "name": "bluesky-likes",
  "version": "1.0.0",
  "description": "display users likes",
  "permissions": ["activeTab"],
  "host_permissions": [
    "https://bsky.app/*",
    "https://bsky.social/*",
    "https://*.bsky.social/*",
    "https://cdn.bsky.app/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://bsky.app/profile/*"],
      "js": ["dist/content.js"]
    }
  ]
}
